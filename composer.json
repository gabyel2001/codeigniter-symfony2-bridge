{
    "name": "piotrpolak/codeigniter-symfony2-bridge",
    "description": "CodeIgniter library that facilitates integration of Symfony2 services into a CodeIgniter application in a compact yet elegant way.",
    "type": "symfony-bundle",
    "require": {
        "php": ">=5.3.0"
    },
    "license": [
        "MIT",
        "GPL-3.0-or-later"
    ],
    "autoload": {
        "psr-4": {
            "PiotrPolak\\CodeIgniterSymfonyBridge\\": "src/"
        },
        "exclude-from-classmap": [
            "/src/Tests/"
        ]
    },
    "authors": [
        {
            "name": "Piotr Polak",
            "email": "piotr@polak.ro"
        }
    ],
    "require-dev": {
        "codeclimate/php-test-reporter": "^0.3.2",
        "phpunit/phpunit": "^4.8"
    }
}
